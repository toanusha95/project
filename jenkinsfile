pipeline { 
  
   agent any

   stages {
   
     stage('Install Dependencies') { 
        steps { 
           sh 'npm install' 
        }
     }
     
     stage('Test') { 
        steps { 
           sh 'echo "testing application..."'
        }
      }

         stage("Deploy application") { 
         steps { 
           sh 'echo "deploying application..."'
         }

     }
   stage("delivery application") {
         steps {
           sh 'echo "delivery application..."'
         }

     }

   	}
   post { 
        always { 
            echo 'I will always say Hello again!'
        }
    }
   }
